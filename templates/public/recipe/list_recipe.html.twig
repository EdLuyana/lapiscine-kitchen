{% extends "public/base.html.twig" %}

{% block title %}Accueil | Les recettes de la piscine{% endblock %}

{% block body %}

<main>

    {% for recipe in publishedRecipes %}

    <article>
        <p>{{ recipe.title }}</p>

        <img width="200px" src="{{ asset('assets/uploads/' ~ recipe.image) }}" />
        <a href="{{ path('show_recipe', {id: recipe.id}) }}">Voir la recette</a>
    </article>
    {%  endfor %}

</main>

{% endblock %}